<%= tag.h1 "ログイン" %>
<%= form_with scope: :session do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class:"form-control" %>
  </div>
  <%= f.submit "ログイン", class:"btn btn-primary mt-3" %>
<% end %>