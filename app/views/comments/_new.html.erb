<div>
  <%= form_with model: @comment, url: comments_create_path do |f| %>
    <%= f.label :comment_text %>
    <%= f.text_field :comment_text, class:"form-control mt-2" %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.submit "コメント追加" , class:"btn btn-primary mt-2"%>
  <% end %>
</div>
